package class_twenty_four;

import java.util.Locale;

public class Main {

	public static void main(String[] args) {
		double x = 10.35784;
		System.out.println("digite, e ao fim a instrução pulao uma linha");
		System.out.printf("%.2f\n",x);
		System.out.printf("%.4f\n",x);
		Locale.setDefault(Locale.US);
		System.out.printf("%.4f\n",x);
		
		System.out.println("Para concatenar algo basta usar o operador '+' que ele irá juntar suas sentencas");
		System.out.println("Variavel X : "+ x);
		
		System.out.println("Já para concatenar com o System.out.printf, basta no primeiro parametro usar string com a formatação, e no segundo o valor a ser substituido");
		System.out.printf("O número %.2f é o mesmo que %f porém simplifcado %n", x ,x);
		
		System.out.println("O printf usa as seguintes representações de acordo com o tipo primitivo");
		System.out.println("%f para números de ponto flutuante");
		System.out.println("%d para número inteiros");
		System.out.println("%s para texto");
		System.out.println("%n para quebra de linha");
		
		String nome = "Maria";
		int idade = 18;
		double renda = 1856.450;
		System.out.printf("%s tem %d anos e tem uma renda mensal de %f", nome, idade, renda);
	}

}
